<idea-plugin>
    <id>com.madrapps.refactor-x</id>
    <name>Refactor X</name>
    <vendor email="madrasappfactory@gmail.com" url="https://thsaravana.github.io">Madrapps</vendor>

    <description><![CDATA[
    Adding the missing refactor options to Kotlin projects
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>intentions.ConvertInterfaceToClassIntention</className>
            <category>Refactor X</category>
        </intentionAction>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>